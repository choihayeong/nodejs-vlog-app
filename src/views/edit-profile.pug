extends base

block content 
    form(method="POST", enctype="multipart/form-data").edit-profile__form 
        label(for="user_avatar") Avatar
        input(type="file", id="user_avatar", name="user_avatar", accept="image/*")
        input(type="email", name="user_email", placeholder="your email", value=loggedInUser.user_email, required) 
        input(type="text", name="user_name", placeholder="your unique name", value=loggedInUser.user_name, required) 
        input(type="text", name="user_location", placeholder="your location (optional)", value=loggedInUser.user_location) 
        input(type="submit" value="Update")  

        if !loggedInUser.social_only
            div.edit-profile__password
                a(href="change-password") Change Password &rarr; 