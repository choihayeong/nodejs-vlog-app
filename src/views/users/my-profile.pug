extends ../base
include ../mixins/video

block content 
    div.profile-data
        img(src=`/${user.avatar_url}`, alt="").avatar

        h3=user.user_name 

        if user.videos.length !== 0
            ul.videolist 
                li 
                    each video in user.videos 
                        +video(video)
        else
            div.no-data 
                p Sorry nothing found.