extends base

block content 
	if errMessage
		p=errMessage
	form(method="post", enctype="multipart/form-data") 
		label(for="vlog_video") Video File 
		input(type="file", id="vlog_video", name="vlog_video", accept="video/*", required)
		input(type="text", name="vlog_title", maxlength=80, placeholder="title", required)
		input(type="text", name="vlog_desc", minlength=30, placeholder="description", required)
		input(type="text", name="hashtags", placeholder="Hashtags, seperated by comma.", required)
		input(type="submit", value="Upload")